	<label class="orange awesome medium button"><font color="black"><%= link_to "CRAIGSLIST", "http://sfbay.craigslist.org/", :class => 'actionbutton'%></font> </label> 
	</div>
	
	<br/>
	<b>Discuss:</b> <label class="orange awesome medium button"><font color="black"><%= link_to 'DISCUSS', element, :class => 'actionbutton'%></font></label>
		
	<br/>
	<div class="hr"></div>
	<br/>
	<% end %>
<% end %>

