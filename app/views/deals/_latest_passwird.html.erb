<% #deals = Deal.find(:all, :order => 'publish_date DESC', :conditions => ['source != ?', 'stashflip'])%>

<% deals.map do |element| %>
	<% unless element.nil? %>
	
	Source: <label class="black awesome medium button"><font color="white"><%= element.source.humanize %></font></label> 
	<br/>
	<b>Date:</b> <%= element.publish_date%>
	<br/>
	<b>Title:</b> <%= element.name%>
	
	<% if element.stashflip_status == 'stash'%>
	<div style="clear:both; float:left;">
	<img src="/images/stash.png"></img>
	</div>
	<% end %>
	<% if element.stashflip_status == 'flip'%>
	<div style="clear:both; float:left;">
	<img src="/images/flip.png"></img>
	</div>
	<% end %>
	
	<br/>
	<b>Description:</b><br/> <%= element.description %>
	<br/><br/>
	<b>Price:</b> $<%= element.cost %>
	<br/>
	<b>Profit Margin:</b> <label class="yellow awesome medium button"><font color="black">+$<%= element.profit_margin %></font></label> 
	<br/><br/>
	<b>Buy:</b> <label class="orange awesome medium button"><font color="black"><%= link_to "BUY", element.buy_link, :target => "_blank"
%></font> </label>
	<br/><br/>
	<b>Sell:</b> <label class="orange awesome medium button"><font color="black"><%= link_to "EBAY", "http://sell.ebay.com/sell", :target => "_blank"
%></font> </label> 
	<label class="orange awesome medium button"><font color="black"><a href="http://www.amazon.com/gp/redirect.html?ie=UTF8&location=http%3A%2F%2Fwww.amazon.com%2Fgp%2Fseller%2Fsell-your-stuff.html&tag=stashflip-20&linkCode=ur2&camp=1789&creative=390957" target="_blank">AMAZON</a><img src="https://www.assoc-amazon.com/e/ir?t=stashflip-20&l=ur2&o=1" width="1" height="1" border="0" alt="" style="border:none !important; margin:0px !important;" /></font></label>
	
	<label class="orange awesome medium button"><font color="black"><%= link_to "CRAIGSLIST", "https://post.craigslist.org/", :target => "_blank"%></font> </label> 
	
	
	<div class="hr"></div>
	<br/><br/><br/>
	<% end %>
	<br/>
<% end %>

    <div class="stashflip_pagination">
      <div class="page_info">
        <%= page_entries_info deals %>
      </div>
      <%= will_paginate deals, :container => false, :params => {:anchor => "externaldeals" } %>
    </div>

