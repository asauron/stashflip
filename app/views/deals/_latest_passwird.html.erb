<% deals.map do |element| %>
	<% unless element.nil? %>

	<% if element.stashflip_status == 'stash'%>
	<div style="clear:both; float:left;">
	<img src="/images/stash.png" width="40px;" height="40px;"></img>
	</div>
	<% end %>
	<% if element.stashflip_status == 'flip'%>
	<div style="clear:both; float:left;">
	<img src="/images/flip.png" width="40px;" height="40px;"></img>
	</div>
	<% end %>
		
	<b><%= element.name%></b>
	<br/>
	<%= element.publish_date.strftime("%m/%d/%Y") %>
	<br/><br/>
	

	<div style = "width:820px;">
	<div style = "width:660px; clear:both; float:left;">
	<%= element.description %>
	</div>
	
	<div style = "margin-left: 20px; float:left;">
	<% if element.photo.file?%>
	<%= image_tag element.photo.url %>
	<% end %>
	</div>
	</div>
	
	<div style = "clear:both;">
	<br/>		
	<b>Price:</b> <%=number_to_currency(element.cost, :unit => "$") %>
	<br/>
	<b>Profit Margin:</b> <label class="yellow awesome medium button"><font color="black">+<%= number_to_currency(element.profit_margin, :unit => "$") %></font></label> 
	<br/><br/>
	<b>Buy:</b> <label class="orange awesome medium button"><font color="black"><%= link_to "BUY", element.buy_link, :class => 'actionbutton'
%></font> </label>
	<br/><br/>
	<b>Sell:</b> <label class="orange awesome medium button"><font color="black"><%= link_to "EBAY", "http://sell.ebay.com/sell", :class => 'actionbutton'
%></font> </label> 
