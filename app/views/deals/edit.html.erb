<div id="maincontent">
<h1>Editing deal</h1>

<% form_for(@deal) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %> (Title of the deal)<br />
    <%= f.text_field :name %>
  </p>
  <p> 
    <%= f.label :description %> (Use HTML for new lines i.e. br/ tags) <br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :guid %> (Type in something unique here i.e. 1, 2, 3) <br />
    <%= f.text_field :guid %>
  </p>  
  <p>
    <%= f.label :source %> (i.e. stashflip) <br />
    <%= select :deal,:source, {"Stashflip" => "stashflip", "Passwird" => "passwird", "Bens Bargains" => "bensbargains"} %>
  </p>        
  <p>
    <%= f.label :buy_link %> (Insert affiliate link here)<br />
    <%= f.text_field :buy_link %>
  </p>
  <p>
    <%= f.label :cost %> (Cost of the product)<br />
    <%= f.text_field :cost %>
  </p>  
  <p>
    <%= f.label :cost_retail %> (How much does it cost normally) <br />
    <%= f.text_field :cost_retail %>
  </p>  
  <p>
    <%= f.label :profit_margin %> (Cost_Retail - Cost) <br />
    <%= f.text_field :profit_margin %>
  </p>   
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @deal %> |
<%= link_to 'Back', deals_path %>
</div>