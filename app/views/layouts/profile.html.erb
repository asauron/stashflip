<!DOCTYPE html> 
<html>
<head> 
	<%= stylesheet_link_tag :all %> <%= javascript_include_tag :defaults %>
	<link rel="stylesheet" type="text/css" href="/style.css" />
	<link rel="shortcut icon" href="/images/favicon.ico" >
</head> 
	<body> 
		
	<div id="user_nav">
	  <% if current_user %>
	  	<%= link_to "Home", root_path %> |
	  	<%= link_to 'Post Deal', new_deal_path %> |
	  	<%= link_to 'Manage Deals', deals_path %> |
	  	<%= link_to "#{current_user.username}'s Profile", users_url %> |
	    <%= link_to "Edit Profile", editprofile_url %> |
	    <%= link_to "About", "/website/about" %> |
	    <%= link_to "Blog", "http://stashflip.tumblr.com/", :target => "_blank" %> |
	    <%= link_to "Submit Deal", "http://stashflip.tumblr.com/ask", :target => "_blank" %> |		    
	    <%= link_to "Logout", logout_path %>
	    
	    <div style="float:right;">
	    <img src="/images/stash.png" width="20px;" height="20px;"></img> <%= link_to "Stash", "/website/stashindex" %> |
