  <%= button_to_function "details", visual_effect(:toggle_slide, "box_details_#{eventful_info_box_counter}", :duration => 0.5 ), :class => 'red awesome small button' %>

  <div style="display:none" id="box_details_<%=eventful_info_box_counter%>">
    <% if eventful_info_box['image'] != nil %>
      <%= image_tag(eventful_info_box['image']['medium']['url']) %>
    <% end %>
    <ul>
            <li>
      <B>Venue</b> :: <%= link_to(h(eventful_info_box['venue_name']), eventful_info_box['venue_url']) %>
      </li>
      <li>
      <b>Address</b> :: <%= h(eventful_info_box['venue_address'].to_s + ', ' + eventful_info_box['city_name'].to_s + ', ' + eventful_info_box['region_abbr'].to_s) %>  
      </li>
      <li>
      <b>Start</b> :: <%= eventful_info_box['start_time'].to_s %> 
      </li>
      <li>
      <b>Stop</b> :: <%= eventful_info_box['stop_time'].to_s %> 
      </li>
      <li>
      <b>Description</b> :: <br/>
      <%= strip_tags(eventful_info_box['description']) %>
      </li>
      <% dest_address = eventful_info_box['venue_address'] + ', ' + eventful_info_box['city_name'] + ', '+ eventful_info_box['region_abbr'] + eventful_info_box['posta_code'].to_s %>
      <li>
      <% if false %>
        <%= button_to 'direction to', direction_url, :onclick => 'window.open('+direction_url+')', :return => false %>
      <% end %>
      <% if false %>
        <%= button_to_function 'direction to', "if (document.getElementById('input_address').value != 'YOUR ADDRESS') openGoogleDirections('#{dest_address}')", :class => 'awesome small button' %>
      <% end %>
      <%= button_to_function 'directions to', "openGoogleDirections('#{dest_address}')", :class => 'awesome small button' %>

      </li>

    </ul>
  </div>
<% end %>



