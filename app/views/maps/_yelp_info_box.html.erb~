    <%= image_tag(yelp_info_box['photo_url'].to_s) %>
    <ul>
      <li><b>Phone</b> :: <%= number_to_phone(yelp_info_box['phone']) %> </li>
      <li><b>Beatmap Rating</b> :: <%= yelp_info_box['beatmap_rating'] %> </li>
      <li><b># of Reviews</b> :: <%= yelp_info_box['review_count'] %> </li>
      <li><b>Overall Rating</b></li>
      <li><%= image_tag(yelp_info_box['rating_img_url'].to_s)%> :: <%= yelp_info_box['avg_rating']%> </li>
      <% direction_url = 'http://maps.google.com/maps?saddr=YOUR_ADDRESS&daddr=' + yelp_info_box['address1'] + ', ' + yelp_info_box['city'] + ', '+ yelp_info_box['state'] %>
      <% dest_address = yelp_info_box['address1'] + ', ' + yelp_info_box['city'] + ', '+ yelp_info_box['state'] %>
      <li>
      <% if false %>
        <%= button_to 'direction to', direction_url, :onclick => 'window.open('+direction_url+')', :return => false %>
      <% end %>
      <% if false %>
        <%= button_to_function 'direction to', "if (document.getElementById('input_address').value != 'YOUR ADDRESS') openGoogleDirections('#{dest_address}')", :class => 'awesome small button' %>
      <% end %>
      <%= button_to_function 'directions to', "openGoogleDirections('#{dest_address}')", :class => 'awesome small button' %>

      </li> 
    </ul>
    </div>

  <% end %>

