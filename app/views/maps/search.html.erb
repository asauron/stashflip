<html>
  <head>
    <title>Beatmap search function</title>
    <link rel="stylesheet" type="text/css" href="/style.css" />
    <%= GMap.header(:with_vml => false, :host => request.host) %>

    <!-- <script src="http://maps.google.com/maps?file=api&v=2&key=GOOGLE_MAPS_KEY" type="text/javascript"></script> -->

    <%= javascript_include_tag 'application' %>

    <% if @displaymap != nil %>
      <%= @displaymap.to_html %>
    <% end %>
  </head>
  <body>	

<div id="map_page_content">     
    <div id= "map_info">
      <% if @displaymap != nil %>
        <div id="display_map">
          <%= @displaymap.div(:width => 700, :height => 500) %>
        </div>
      <% end %>
	 
      <div id="restaurant_list">
         <% if @business_list != nil %>
	          <!--><h2> Restaurants: </h2> -->
			Restaurants: <br/>
	          <%= render :partial => 'yelp_info_box', :collection => @business_list %>
	        <% end %>
	        <% if @events_list != nil %>
	          <!--><h2> Events : </h2> -->
			Events : <br/>
	          <%= render :partial => 'eventful_info_box', :collection => @events_list %>
	        <% end %>
      </div>
    </div>	 
    
	<div style="float:left; clear:both;">
    	<img src="/images/legend.png" />
    </div>
    
    <!-- what we want is for eventually when you click save hidden field for title/description pops up then s-->
    <%= render :partial => 'maps/map_save' %>

  <br/><br/>
	<%= render :partial => 'website/footer' %>
</div> <!-- end of map page content -->
  </body>
</html>
